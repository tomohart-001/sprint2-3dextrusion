modules = ["web", "python-3.11", "nodejs-20", "postgresql-16"]
run = "python3 main.py"

[nix]
channel = "stable-24_05"
packages = ["cargo", "freetype", "geos", "lcms2", "libGL", "libGLU", "libiconv", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "proj", "rustc", "tcl", "tk", "xsimd", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Web App"

[[workflows.workflow]]
name = "Web App"
author = 42706635
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
